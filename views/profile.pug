extends base
block content
  .profile-container
    .proin-header
      h1.primary-heading PIB Officer Login
      h2.secondary-heading= `Department: ${user.department}`
    
    .news-columns
      .positive-news-column
        h3 Positive News
        ul.news-list
          each article in positiveNews
            li.news-item.positive-news
              h2.news-title= article.title
              p.news-content= article.content
              a.news-link(href=`/news/${article._id}`) Read More

      .negative-news-column
        h3 Negative News
        ul.news-list
          each article in negativeNews
            li.news-item.negative-news
              h2.news-title= article.title
              p.news-content= article.content
              a.news-link(href=`/news/${article._id}`) Read More